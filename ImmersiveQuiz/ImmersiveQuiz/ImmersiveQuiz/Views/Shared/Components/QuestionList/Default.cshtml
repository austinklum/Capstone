@model ImmersiveQuiz.Models.QuestionLocationViewModel
<br />
<div>
    @foreach (var item in Model.Questions)
    {
    <div class="card">
        <div class="card-header">
            @Html.DisplayFor(modelItem => item.Content)
        </div>
        <div class="card-body">
            <a class="badge bg-primary rounded-pill text-light" asp-action="Edit" asp-controller="Questions" asp-route-id="@item.QuestionId">Edit</a>
            <a  class="badge bg-danger rounded-pill text-light" asp-action="Delete" asp-controller="Questions" asp-route-id="@item.QuestionId">Delete</a>
            @await Component.InvokeAsync("AnswerList", new { SearchQuestionId = Model.LocationId.ToString(), SearchAnswerContent = "" })
        </div>
    </div>
    }
</div>